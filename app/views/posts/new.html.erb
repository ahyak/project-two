<%= form_for @post, :html => {class: 'form-horizontal'}  do |post| %>
<div class="row"><legend class="col-md-4 col-md-offset-4">Create Your Post:</legend></div>
<fieldset>
<div class="form-group">
  <%= post.label :title, 'Title*', class: 'col-md-4 control-label'%>
  <div class="col-md-5">
  <%= post.text_field :title, class:'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= post.label :body, 'Body*', class: 'col-md-4 control-label'%>
  <div class="col-md-5">
  <%= post.text_area :body, class:'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= post.label :image, 'Image', class: 'col-md-4 control-label'%>
  <div class="col-md-5">
  <%= post.text_field :image, class:'form-control' %>
  </div>
</div>
  <div class="form-group">
    <div class="col-md-8 col-md-offset-4">
  <%= post.submit 'Create Post', class: 'btn'%>
    </div>
  </div>
</fieldset>
<% end %>
