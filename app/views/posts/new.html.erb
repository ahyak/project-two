<!-- Page Header -->
	<header class="masthead" id="newpost_background">
		<%= render 'shared/navigationbar' %>
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-10 mx-auto">
					<%= render 'shared/alerts' %>
					<div class="page-heading">
						<h1>New Post!</h1>
						<span class="subheading">Share your wisdom!</span>
					</div>
				</div>
			</div>
		</div>
	</header>

	<!-- Main Content -->
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
        <%= form_for @post, :html => {class: 'form-horizontal'}  do |post| %>
				<div class="control-group">
					<div class="form-group floating-label-form-group controls">
            <%= post.label :title, 'Title'%>
            <%= post.text_field :title, class:'form-control' %>
					</div>
				</div>
				<div class="control-group">
					<div class="form-group floating-label-form-group controls">
            <%= post.label :body, 'Body'%>
            <%= post.text_area :body, class:'form-control' %>
					</div>
				</div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <%= post.label :image, 'Image'%>
            <%= post.text_field :image, class:'form-control' %>
          </div>
        </div>
        <br>
				<div class="form-group">
          <%= post.submit 'Create Your New Post', class: 'btn btn-primary'%>
				</div>
				<%end %>
			</div>
		</div>
	</div>

	<hr>

	<!-- Footer -->
