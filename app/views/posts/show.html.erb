  <% provide(:title, @post.title) %>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= @post.image%>)">
  <%= render 'shared/navigationbar' %>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @post.title%></h1>
            <span class="meta">Posted by
              <%= link_to @post.user.first_name, user_path(@post.user.id)%>
            </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= @post.body%></p>
        </div>
      </div>
    </div>
  </article>
  <hr>

  <div class="container">
    <div class="row">
      <div class="col-lg-11">
        <%= link_to "Back to Posts ", root_path, class:"btn btn-primary backtoposts" %>
      </div>
    </div>
  </div>
  <hr>


  <!-- Footer -->
  <%= render 'shared/footer' %>
