<!-- Login Form -->
<h1> Sign In:</h1>
<%= form_for(:session, url: login_path) do |f| %>

	<%= f.label :email, 'Email Address*' %>
	<%= f.text_field :email %>

	<%= f.label :password, 'Password*' %>
	<%= f.password_field :password %>

	<%= f.submit 'Log in' %>

<% end %>

<p> Don't have an account? <%= link_to "Click here!", signup_path %></p>
