<header class="navbar navbar-static-top ">
  <div class="container">
    <%= link_to image_tag("http://www.uidownload.com/files/337/20/911/vector-pink-butterfly-logo.jpg", :size=>60), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About",about_path %></li>
        <li class="dropdown">
          <% if logged_in? %>
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
      aria-haspopup="true" aria-expanded="false"> Signed in as <%= current_user.first_name %>
      <span class="caret"></span></a>

      <ul class="dropdown-menu">
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to "Posts", user_path(current_user) %></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to "Log out", logout_path, method: 'delete'%></li>
      <% else %>
      <li> <%= link_to "Log in", login_path %></li>
      <li><%= link_to "Sign up", signup_path %></li>
      <% end %>
    </ul>
  </ul>
  </nav>
</div>
</header>
